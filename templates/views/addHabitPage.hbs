<!-- addHabitPage.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/user-styles/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <title>Habit Tracker</title>
</head>
<body>
  <header>
    <nav>
      <div class="nav-logo">
        <i class="fas fa-bars fa-beat-fade"></i>
        <span><a href="/viewAll">View All Habits</a></span>
      </div>
      <div class="nav-items">
        <span><a href="/todaysHabits" style="color: white;">Today's Habit</a></span>
      </div>
    </nav>
  </header>

  <div class="container">
    <h1>Habit Tracker</h1>
    <form action="/addHabit" method="POST" class="form-container">
      <div class="input-container">
        <input type="text" id="habit-input" name="title"  placeholder="Add a new habit" required>
        <button id="add-habit-btn" type="submit">Add</button>
      </div>
    </form>
    <div class="habit-list" id="habit-list"></div>
  </div>

  <footer>
    <p>Created by Gaurav</p>
  </footer>

  <script src="/js/user-js/script.js"></script>
</body>
</html>
